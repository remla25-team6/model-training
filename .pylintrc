[MASTER]
# Ignore migrations or tests if you want
ignore=migrations,test

[MESSAGES CONTROL]
# Disable some common noisy warnings
disable=C0114,C0115,C0116  # missing docstring stuff

[FORMAT]
max-line-length=88

[REPORTS]
output-format=colorized
reports=no

[TYPECHECK]
ignored-modules=numpy,pandas  # Example for ML projects

[SIMILARITIES]
min-similarity-lines=4
